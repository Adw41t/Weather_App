<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/hourly_weather_item_constraint_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/hourly_weather_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">
    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:id="@+id/hourly_weather_item_icon"
        tools:src="@drawable/ic_weather_sunny"
        android:layout_centerHorizontal="true"
        tools:tint="#f9a920" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourly_weather_item_temp"
        android:layout_below="@id/hourly_weather_item_icon"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        tools:text="25.0Â°C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourly_weather_item_time"
            android:layout_below="@id/hourly_weather_item_temp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            tools:text="7:00 AM"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/hourly_weather_item_rain_icon"
            android:layout_below="@id/hourly_weather_item_time"
            android:background="@drawable/rain_icon"
            tools:background="@drawable/rain_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourly_weather_item_rain"
            android:layout_below="@id/hourly_weather_item_time"
            android:textAlignment="center"
            android:layout_toEndOf="@id/hourly_weather_item_rain_icon"
            android:layout_marginStart="3dp"
            tools:text="100%"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>